<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CKD.Introduction.LoginOrRegister"
    Title="Social Dialysis">
    
    
	<ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="100" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button  
                Grid.Row="2"  
                FontSize="Medium" 
                HeightRequest="100" 
                WidthRequest="200" 
                Text="Login" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand" 
                x:Name="login"
                BackgroundColor="Green"/>

            <Button  
                Grid.Row="4"  
                FontSize="Medium" 
                HeightRequest="100" 
                WidthRequest="200" 
                Text="Register" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand" 
                x:Name="register"
                BackgroundColor="Green"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>
